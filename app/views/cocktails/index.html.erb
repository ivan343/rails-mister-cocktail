<div class="banner">
  <h1>Let's have some cocktails</h1>
  <%= link_to "Add a Cocktail", new_cocktail_path, class: "cocktail" %>

</div>

<div class="cards">
<% @cocktails.each do |cocktail| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
 <%= link_to cocktail.name, cocktail_path(cocktail), class: "Menu
 " %>

  </div>
<% end %>

</div>
